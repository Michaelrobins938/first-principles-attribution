<svg xmlns="http://www.w3.org/2000/svg" width="800" height="450" viewBox="0 0 800 450">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f8fafc"/>
      <stop offset="100%" style="stop-color:#e2e8f0"/>
    </linearGradient>
  </defs>
  <rect width="800" height="450" fill="url(#bg)"/>
  
  <text x="400" y="30" font-family="Arial, sans-serif" font-size="18" fill="#1e293b" text-anchor="middle" font-weight="bold">Universal Data Adapter Ecosystem</text>
  
  <!-- Center Hub -->
  <polygon points="400,120 440,155 440,205 400,240 360,205 360,155" fill="#3182ce" stroke="#1e40af" stroke-width="2"/>
  <text x="400" y="175" font-family="Arial, sans-serif" font-size="11" fill="white" text-anchor="middle" font-weight="bold">UniversalEvent</text>
  <text x="400" y="190" font-family="Arial, sans-serif" font-size="10" fill="#bfdbfe" text-anchor="middle">Schema</text>
  <text x="400" y="215" font-family="Arial, sans-serif" font-size="8" fill="#bfdbfe" text-anchor="middle">6 adapters</text>
  
  <!-- Facebook Adapter -->
  <rect x="60" y="80" width="130" height="55" rx="6" fill="#1877f2"/>
  <text x="125" y="105" font-family="Arial, sans-serif" font-size="11" fill="white" text-anchor="middle" font-weight="bold">FacebookAdapter</text>
  <text x="125" y="122" font-family="Arial, sans-serif" font-size="9" fill="#e0f2fe" text-anchor="middle">Input: Facebook Events</text>
  <line x1="190" y1="140" x2="360" y2="170" stroke="#1877f2" stroke-width="2" marker-end="url(#arrow)"/>
  
  <!-- GA4 Adapter -->
  <rect x="610" y="80" width="130" height="55" rx="6" fill="#f59e0b"/>
  <text x="675" y="105" font-family="Arial, sans-serif" font-size="11" fill="white" text-anchor="middle" font-weight="bold">GA4Adapter</text>
  <text x="675" y="122" font-family="Arial, sans-serif" font-size="9" fill="#fef3c7" text-anchor="middle">Input: GA Events</text>
  <line x1="610" y1="140" x2="440" y2="170" stroke="#f59e0b" stroke-width="2" marker-end="url(#arrow)"/>
  
  <!-- CSV Adapter -->
  <rect x="60" y="280" width="130" height="55" rx="6" fill="#10b981"/>
  <text x="125" y="305" font-family="Arial, sans-serif" font-size="11" fill="white" text-anchor="middle" font-weight="bold">CSVAdapter</text>
  <text x="125" y="322" font-family="Arial, sans-serif" font-size="9" fill="#d1fae5" text-anchor="middle">Input: CSV Records</text>
  <line x1="190" y1="305" x2="360" y2="270" stroke="#10b981" stroke-width="2" marker-end="url(#arrow)"/>
  
  <!-- Browser Adapter -->
  <rect x="610" y="280" width="130" height="55" rx="6" fill="#8b5cf6"/>
  <text x="675" y="305" font-family="Arial, sans-serif" font-size="11" fill="white" text-anchor="middle" font-weight="bold">BrowserAdapter</text>
  <text x="675" y="322" font-family="Arial, sans-serif" font-size="9" fill="#ede9fe" text-anchor="middle">Input: Browser Events</text>
  <line x1="610" y1="305" x2="440" y2="270" stroke="#8b5cf6" stroke-width="2" marker-end="url(#arrow)"/>
  
  <!-- Output arrow -->
  <line x1="400" y1="245" x2="400" y2="300" stroke="#3182ce" stroke-width="3" marker-end="url(#arrow)"/>
  
  <!-- UniversalEvent Properties -->
  <rect x="200" y="360" width="400" height="75" rx="8" fill="#1e293b" opacity="0.9"/>
  <text x="400" y="380" font-family="Arial, sans-serif" font-size="12" fill="white" text-anchor="middle" font-weight="bold">UniversalEvent Schema Properties</text>
  
  <rect x="220" y="395" width="160" height="30" rx="4" fill="#3b82f6"/>
  <text x="300" y="415" font-family="Arial, sans-serif" font-size="10" fill="white" text-anchor="middle">timestamp: ISO 8601</text>
  
  <rect x="420" y="395" width="160" height="30" rx="4" fill="#10b981"/>
  <text x="500" y="415" font-family="Arial, sans-serif" font-size="10" fill="white" text-anchor="middle">user_id: SHA256</text>
  
  <rect x="310" y="320" width="180" height="30" rx="4" fill="#8b5cf6"/>
  <text x="400" y="340" font-family="Arial, sans-serif" font-size="10" fill="white" text-anchor="middle">channel taxonomy | context signals</text>
</svg>